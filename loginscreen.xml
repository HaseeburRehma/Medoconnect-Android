<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#DDF2FF">

    <TextView
        android:id="@+id/welcomeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textColor="#00BCD4"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <ImageView
        android:id="@+id/medoimageview"
        android:layout_width="134dp"
        android:layout_height="129dp"
        android:padding="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/medo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <Button
            android:id="@+id/googlebtn"
            android:layout_width="117dp"
            android:layout_height="66dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/google"
            android:hint="google"
            android:padding="8dp"
            android:text="" />

        <Button
            android:id="@+id/gmailbtn"
            android:layout_width="122dp"
            android:layout_height="66dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/gmail"
            android:padding="8dp"
            android:hint="gmail" />

    </LinearLayout>

    <Button
        android:id="@+id/cellphonebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up with Cell Phone"
        android:padding="16dp"
        android:textColor="#000000"
        android:backgroundTint="@color/white"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/facebookbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up with Facebook"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#15257E"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/emailbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up with Email"
        android:padding="16dp"
        android:textColor="#000000"
        android:backgroundTint="@color/white"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/signintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already a member? Sign in"
        android:textSize="16sp"
        android:padding="16dp"
        android:textColor="#00BCD4"/>

</LinearLayout>
